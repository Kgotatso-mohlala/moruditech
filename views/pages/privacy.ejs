<!-- privacy.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Privacy Policy | Morudi Tech</title>
  <link rel="icon" href="/assets/images/icon.webp" type="image/webp">
  <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <link rel="stylesheet" href="css/style.css">
  <style>
  
    .privacy-list {
      list-style-type: none;
      padding-left: 0;
    }
    .privacy-list li {
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
  <!-- Navigation -->
<%- include("../partials/_nav.ejs") %>

  <!-- Privacy Section -->
   <section class="privacy-section">
    <div class="container privacy" data-aos="fade-up">
      <h2 class="section-title">Privacy Policy</h2>
      <p class="text-center">Your privacy is of utmost importance to us. Please read our privacy policy below.</p>
  
      <div class="accordion" id="privacyAccordion" data-aos="fade-up" data-aos-delay="100">
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              <i class="fas fa-shield-alt"></i> Data Collection
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#privacyAccordion">
            <div class="accordion-body">
              <ul class="privacy-list">
                <li><strong>1. Personal Data:</strong> We collect personal information you provide voluntarily, such as your name, email, etc.</li>
                <li><strong>2. Usage Data:</strong> We collect data about how you use our website to improve our services.</li>
              </ul>
            </div>
          </div>
        </div>
  
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              <i class="fas fa-lock"></i> Data Protection
            </button>
          </h2>
          <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#privacyAccordion">
            <div class="accordion-body">
              <ul class="privacy-list">
                <li><strong>3. Security:</strong> We implement industry-standard security measures to protect your personal data.</li>
                <li><strong>4. Data Sharing:</strong> We do not sell or share your personal information with third parties without your consent.</li>
              </ul>
            </div>
          </div>
        </div>
  
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingThree">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
              <i class="fas fa-cogs"></i> Cookies
            </button>
          </h2>
          <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#privacyAccordion">
            <div class="accordion-body">
              <ul class="privacy-list">
                <li><strong>5. Cookies:</strong> We use cookies to personalize your experience and track usage.</li>
                <li><strong>6. Cookie Management:</strong> You can control cookies through your browser settings.</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
   </section>
  

  <!-- Footer -->
  <%- include("../partials/_footer.ejs") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init();
  </script>
</body>
</html>
