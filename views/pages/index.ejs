<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
   AOS.init(); 
   document.addEventListener('DOMContentLoaded', function () {
  const offset = 300,
        offsetOpacity = 1200,
        scrollTopDuration = 700;
  const backToTopButton = document.querySelector(".go-top");

  window.addEventListener("scroll", function () {
    if (window.scrollY > offset) {
      backToTopButton.classList.add("go-top-visible");
    } else {
      backToTopButton.classList.remove("go-top-visible", "go-top-fade-out");
    }

    if (window.scrollY > offsetOpacity) {
      backToTopButton.classList.add("go-top-fade-out");
    }
  });

  backToTopButton.addEventListener("click", function (event) {
    event.preventDefault();
    
    // Smooth scroll to top
    window.scrollTo({
      top: 0,
      behavior: "smooth"
    });
  });
});

</script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("contact-form");
    const nameField = document.getElementById('name');
    const emailField = document.getElementById('email');
    const messageField = document.getElementById('message');

    form.addEventListener("submit", function (event) {
      event.preventDefault(); // Prevent default form submission

      let valid = true;

      // Reset error messages
      document.getElementById('name-error').style.display = 'none';
      document.getElementById('email-error').style.display = 'none';
      document.getElementById('message-error').style.display = 'none';

      // Custom Validation

      // Name Validation
      if (!nameField.value.trim()) {
        valid = false;
        document.getElementById('name-error').style.display = 'block';
      }

      // Email Validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(emailField.value)) {
        valid = false;
        document.getElementById('email-error').style.display = 'block';
      }

      // Message Validation
      if (!messageField.value.trim()) {
        valid = false;
        document.getElementById('message-error').style.display = 'block';
      }

      // If validation passes, submit the form via AJAX
      if (valid) {
        const formData = new FormData(form); // Collect form data

        fetch('/contact', {
          method: 'POST',
          body: formData,
        })
        .then(response => response.text()) // Get response as text
        .then(data => {
          if (data === 'Message sent successfully') {
            // Show success toast
            Toastify({
              text: "Message sent successfully!",
              backgroundColor: "linear-gradient(to right, #4caf50, #2f7d31)",
              duration: 3000
            }).showToast();

            // Clear the form
            form.reset();
          } else {
            // Show error toast if there's an issue
            Toastify({
              text: "Error sending message. Please try again.",
              backgroundColor: "linear-gradient(to right, #f44336, #b71c1c)",
              duration: 3000
            }).showToast();
          }
        })
        .catch(error => {
          console.error('Error:', error);
          // Show error toast in case of any issue
          Toastify({
            text: "Error submitting the form. Please try again.",
            backgroundColor: "linear-gradient(to right, #f44336, #b71c1c)",
            duration: 3000
          }).showToast();
        });
      }
    });
  });
</script>
